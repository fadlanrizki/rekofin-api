generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

////////////////////////////////////////////////////
// ENUM
////////////////////////////////////////////////////

enum Role {
  ADMIN
  USER
}

////////////////////////////////////////////////////
// MASTER TABLES
////////////////////////////////////////////////////

model User {
  id       Int    @id @default(autoincrement())
  fullname String
  username String
  email    String @unique
  password String
  role     Role   @default(USER)

  createdAt DateTime @default(now())

  consultations Consultation[]
  rulesCreated  Rule[]         @relation("RuleCreatedBy")
}

model Fact {
  id          Int    @id @default(autoincrement())
  code        String @unique
  description String

  question            Question?
  ruleConditions      RuleCondition[]
  consultationAnswers ConsultationAnswer[]
}

model Question {
  id   Int    @id @default(autoincrement())
  text String

  factId Int  @unique
  fact   Fact @relation(fields: [factId], references: [id])
}

model Conclusion {
  id          Int    @id @default(autoincrement())
  code        String @unique
  description String
  category    String

  ruleResults             RuleResult[]
  recommendations         Recommendation[]
  consultationConclusions ConsultationConclusion[]
}

model Recommendation {
  id        Int     @id @default(autoincrement())
  text      String
  source    String?
  principle String?

  conclusionId Int
  conclusion   Conclusion @relation(fields: [conclusionId], references: [id])
}

model Rule {
  id       Int     @id @default(autoincrement())
  name     String
  isActive Boolean @default(true)

  createdBy Int
  creator   User @relation("RuleCreatedBy", fields: [createdBy], references: [id])

  createdAt DateTime @default(now())

  conditions RuleCondition[]
  results    RuleResult[]
}

////////////////////////////////////////////////////
// RELATION (JUNCTION) TABLES
////////////////////////////////////////////////////

model RuleCondition {
  id Int @id @default(autoincrement())

  ruleId Int
  factId Int

  rule Rule @relation(fields: [ruleId], references: [id])
  fact Fact @relation(fields: [factId], references: [id])

  @@unique([ruleId, factId])
}

model RuleResult {
  id Int @id @default(autoincrement())

  ruleId       Int
  conclusionId Int

  rule       Rule       @relation(fields: [ruleId], references: [id])
  conclusion Conclusion @relation(fields: [conclusionId], references: [id])

  @@unique([ruleId, conclusionId])
}

////////////////////////////////////////////////////
// TRANSACTION TABLES
////////////////////////////////////////////////////

model Consultation {
  id     Int @id @default(autoincrement())
  userId Int

  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  answers     ConsultationAnswer[]
  conclusions ConsultationConclusion[]
}

model ConsultationAnswer {
  id             Int     @id @default(autoincrement())
  consultationId Int
  factId         Int
  value          Boolean

  consultation Consultation @relation(fields: [consultationId], references: [id])
  fact         Fact         @relation(fields: [factId], references: [id])

  @@unique([consultationId, factId])
}

model ConsultationConclusion {
  id             Int @id @default(autoincrement())
  consultationId Int
  conclusionId   Int

  consultation Consultation @relation(fields: [consultationId], references: [id])
  conclusion   Conclusion   @relation(fields: [conclusionId], references: [id])

  @@unique([consultationId, conclusionId])
}
