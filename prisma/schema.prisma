generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  fullname  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  financialProfile FinancialProfile?
  histories        RecommendationHistory[]

  @@map("users")
}

model Admin {
  id        Int      @id @default(autoincrement())
  name      String
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  rules Rule[]

  @@map("admins")
}

model FinancialProfile {
  id            Int      @id @default(autoincrement())
  userId        Int      @unique
  income        Decimal  @db.Decimal(15, 2)
  expenses      Decimal  @db.Decimal(15, 2)
  savings       Decimal  @db.Decimal(15, 2)
  emergencyFund Decimal  @db.Decimal(15, 2)
  investment    Decimal  @db.Decimal(15, 2)
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@map("financial_profiles")
}

model Category {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String?

  recommendations Recommendation[]
  rules           Rule[]

  @@map("categories")
}

model Recommendation {
  id         Int      @id @default(autoincrement())
  categoryId Int
  message    String
  source     String?
  createdAt  DateTime @default(now())

  category  Category                @relation(fields: [categoryId], references: [id])
  histories RecommendationHistory[]

  @@map("recommendations")
}

model Rule {
  id         Int      @id @default(autoincrement())
  name       String
  condition  String
  conclusion String
  categoryId Int
  adminId    Int
  createdAt  DateTime @default(now())

  category Category @relation(fields: [categoryId], references: [id])
  admin    Admin    @relation(fields: [adminId], references: [id])

  @@map("rules")
}

model RecommendationHistory {
  id               Int      @id @default(autoincrement())
  userId           Int
  recommendationId Int
  generatedAt      DateTime @default(now())

  user           User           @relation(fields: [userId], references: [id])
  recommendation Recommendation @relation(fields: [recommendationId], references: [id])

  @@map("recommendation_histories")
}
